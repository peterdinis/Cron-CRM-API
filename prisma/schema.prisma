// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email String @unique
  hash  String
  firstName String?
  lastName  String?
  @@map("users")
}

model Task {
  id     Int    @id @default(autoincrement())
  name   String
  status String
  author String
}

model Note {
  id     Int    @id @default(autoincrement())
  name   String
  author String
}

model Message {
  id          Int    @id @default(autoincrement())
  name        String
  status      String
  author      String
  description String
}
