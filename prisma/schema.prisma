// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  bio      String?
  email    String  @unique
  id       Int     @id @default(autoincrement())
  image    String?
  password String?
  username String? @unique
}

model Task {
  id     Int    @id @default(autoincrement())
  name   String
  status String
  author String
}

model Note {
  id     Int    @id @default(autoincrement())
  name   String
  author String
}

model Message {
  id          Int    @id @default(autoincrement())
  name        String
  status      String
  author      String
  description String
}
